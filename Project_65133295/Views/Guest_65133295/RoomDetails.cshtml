@using Project_65133295.Models
@model Rooms

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";

    var mainImage = Model.RoomImages.FirstOrDefault(i => i.IsMainImage == true) ?? Model.RoomImages.FirstOrDefault();
    string mainImgUrl = mainImage != null ? mainImage.ImageUrl : "https://placehold.co/800x500?text=No+Image";
    var otherImages = Model.RoomImages.OrderBy(i => i.DisplayOrder).ToList();
    
    var approvedReviews = Model.Reviews.Where(r => r.Status == "Approved").OrderByDescending(r => r.CreatedAt).ToList();
}

<div class="bg-gray-50 min-h-screen py-8">
    <div class="container mx-auto px-4 max-w-6xl">
        
        <!-- Breadcrumb -->
        <nav class="flex mb-6 text-sm text-gray-500">
            <a href="@Url.Action("Index", "Guest_65133295")" class="hover:text-primary transition">Home</a>
            <span class="mx-2">/</span>
            <a href="@Url.Action("SearchRoom", "Guest_65133295")" class="hover:text-primary transition">Search</a>
            <span class="mx-2">/</span>
            <span class="text-gray-900 font-medium line-clamp-1">@Model.Title</span>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            
            <!-- LEFT COLUMN: Images & Reviews -->
            <div class="lg:col-span-2 space-y-8">
                
                <!-- Image Gallery -->
                <div class="bg-white rounded-2xl shadow-sm overflow-hidden border border-gray-100">
                    <!-- Main Image Slider -->
                    <div class="relative h-[400px] md:h-[500px] bg-gray-200 group overflow-hidden" 
                         id="sliderContainer"
                         ontouchstart="handleTouchStart(event)" 
                         ontouchmove="handleTouchMove(event)" 
                         ontouchend="handleTouchEnd()">
                        
                        <img id="mainImage" src="@mainImgUrl" alt="@Model.Title" class="w-full h-full object-cover transition duration-500" onerror="this.src='https://placehold.co/800x500?text=No+Image'">
                        
                        <!-- Navigation Arrows (Visible on Hover) -->
                        @if (otherImages.Count > 1)
                        {
                            <button onclick="prevSlide()" class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-black/30 hover:bg-black/50 text-white p-2 rounded-full opacity-0 group-hover:opacity-100 transition duration-300">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
                            </button>
                            <button onclick="nextSlide()" class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-black/30 hover:bg-black/50 text-white p-2 rounded-full opacity-0 group-hover:opacity-100 transition duration-300">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                            </button>
                        }

                        <div class="absolute top-4 right-4 bg-green-500 text-white font-bold px-3 py-1 rounded-lg shadow-md z-10">
                            @Model.Price.ToString("#,##0") ₫/month
                        </div>
                    </div>
                    
                    <!-- Thumbnails -->
                    @if (otherImages.Count > 1)
                    {
                        <div class="p-4 grid grid-cols-4 sm:grid-cols-5 gap-2 bg-white" id="thumbnailContainer">
                            @for (int i = 0; i < otherImages.Count; i++)
                            {
                                var img = otherImages[i];
                                <div class="thumbnail-item aspect-w-16 aspect-h-9 cursor-pointer rounded-lg overflow-hidden border-2 @(i == 0 ? "border-primary opacity-100" : "border-transparent opacity-70") hover:border-primary transition hover:opacity-100"
                                     onclick="goToSlide(@i)">
                                    <img src="@img.ImageUrl" class="w-full h-full object-cover" onerror="this.src='https://placehold.co/200x200?text=No+Image'">
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Description & Utilities -->
                <div class="bg-white rounded-2xl shadow-md p-6 border border-yellow-200">
                    <h1 class="text-3xl font-bold text-yellow-600 mb-2">@Model.Title - Room @Model.RoomNumber</h1>
                    <p class="text-gray-500 mb-6 flex items-center">
                        <svg class="w-5 h-5 mr-1 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        07 Đoàn Trần Nghiệp, Vĩnh Phước, Nha Trang
                    </p>

                    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Description</h2>
                    <div class="prose max-w-none text-gray-700 mb-8 leading-relaxed">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            @Html.Raw(Model.Description.Replace("\n", "<br>"))
                        }
                        else
                        {
                            <p class="text-gray-400 italic">No description available for this room.</p>
                        }
                    </div>

                    <h3 class="text-xl font-semibold text-gray-800 mb-4">Available Amenities</h3>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                        @if (Model.RoomUtilities != null && Model.RoomUtilities.Any())
                        {
                            foreach (var util in Model.RoomUtilities)
                            {
                                if (util.Utilities != null)
                                {
                                    <div class="flex items-center space-x-3 p-3 bg-yellow-50 rounded-lg border border-yellow-100 hover:bg-yellow-100 transition">
                                        <span class="w-8 h-8 flex items-center justify-center bg-white rounded-full shadow-sm text-primary">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                        </span>
                                        <span class="text-gray-700 font-medium">@util.Utilities.UtilityName</span>
                                    </div>
                                }
                            }
                        }
                        else
                        {
                            <div class="col-span-full p-4 bg-gray-50 rounded-lg text-gray-500 italic text-center border border-dashed border-gray-300">
                                No amenity information available for this room.
                            </div>
                        }
                    </div>
                </div>

                <!-- Reviews -->
                <div class="bg-white rounded-2xl shadow-md p-6 border border-yellow-200">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-semibold text-gray-800">Reviews (@approvedReviews.Count)</h2>
                        <div class="flex items-center text-yellow-500 font-bold text-xl">
                            <span class="mr-2 text-gray-800">@(approvedReviews.Any() ? Math.Round(approvedReviews.Average(r => r.Rating), 1).ToString() : "N/A")</span>
                            <svg class="w-6 h-6 fill-current" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                        </div>
                    </div>

                    <div class="space-y-6">
                        @if (approvedReviews.Any())
                        {
                            foreach (var review in approvedReviews)
                            {
                                <div class="border-b border-yellow-100 pb-6 last:border-0 last:pb-0 group hover:bg-yellow-50/50 p-4 rounded-lg transition">
                                    <div class="flex items-start space-x-4">
                                        <div class="flex-shrink-0">
                                            <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center text-yellow-700 font-bold border border-yellow-200">
                                                @(review.Users.LastName?.Substring(0, 1) ?? "U")
                                            </div>
                                        </div>
                                        <div class="flex-1">
                                            <div class="flex items-center justify-between mb-1">
                                                <h4 class="font-bold text-gray-900 group-hover:text-yellow-700 transition">@review.Users.LastName @review.Users.FirstName</h4>
                                                <span class="text-sm text-gray-500">@review.CreatedAt.Value.ToString("dd/MM/yyyy")</span>
                                            </div>
                                            <div class="flex text-yellow-400 text-sm mb-2">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <svg class="w-4 h-4 @(i <= review.Rating ? "fill-current" : "text-gray-300 fill-current")" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                                                }
                                            </div>
                                            <p class="text-gray-600">@review.Comment</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-gray-500 italic text-center py-4">No reviews available for this room.</p>
                        }
                    </div>
                </div>

            </div>

            <!-- RIGHT COLUMN: Booking & Host Info (Sticky) -->
            <div class="lg:col-span-1">
                <div class="sticky top-24 space-y-6">
                    
                    <!-- Booking Box -->
                    <div class="bg-white rounded-2xl shadow-lg p-6 border border-yellow-200">
                        <div class="mb-6">
                            <span class="block text-gray-500 text-sm mb-1">Rental Price</span>
                            <span class="text-3xl font-bold text-yellow-600">@Model.Price.ToString("#,##0") ₫</span>
                            <span class="text-gray-500">/month</span>
                        </div>

                        <div class="space-y-4 text-sm text-gray-700 mb-6">
                            <div class="flex justify-between border-b border-yellow-100 pb-2">
                                <span>Room Number</span>
                                <span class="font-bold text-primary">@Model.RoomNumber</span>
                            </div>
                            <div class="flex justify-between border-b border-yellow-100 pb-2">
                                <span>Area</span>
                                <span class="font-medium text-gray-900">@Model.Area m²</span>
                            </div>
                            <div class="flex justify-between border-b border-yellow-100 pb-2">
                                <span>Max Occupancy</span>
                                <span class="font-medium text-gray-900">@(Model.MaxOccupancy ?? 2) guests</span>
                            </div>
                            <div class="flex justify-between border-b border-yellow-100 pb-2">
                                <span>Status</span>
                                <span class="font-bold text-green-600">@Model.RoomStatuses.StatusName</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Address</span>
                                <span class="font-medium text-gray-900 text-right w-2/3">07 Đoàn Trần Nghiệp, Vĩnh Phước, Nha Trang</span>
                            </div>
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="#" class="block w-full py-3 text-center bg-primary text-white font-bold rounded-lg hover:bg-primary-dark shadow-md transition transform hover:scale-105">
                                BOOK NOW
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Guest_65133295", new { returnUrl = Request.Url.PathAndQuery })" class="block w-full py-3 text-center bg-primary text-white font-bold rounded-lg hover:bg-primary-dark shadow-md transition transform hover:scale-105">
                                LOGIN TO BOOK
                            </a>
                            <p class="text-xs text-center text-gray-500 mt-2">You need to login to make a booking</p>
                        }
                    </div>

                    <!-- System Contact Info (Single Owner Model) -->
                    <div class="bg-white rounded-2xl shadow-md p-6 border border-yellow-200 flex items-center space-x-4">
                        <div class="flex-shrink-0">
                             <img src="/public/logo.jpg" alt="Thanh Thao Stay" class="w-16 h-16 rounded-full object-cover border-2 border-primary">
                        </div>
                        <div class="flex-1">
                            <h4 class="font-bold text-gray-900 text-lg">Thanh Thao Stay</h4>
                            <p class="text-sm text-gray-500 mb-2">System Administrator</p>
                            <a href="tel:0901234567" class="inline-flex items-center text-yellow-600 font-bold hover:underline text-sm hover:text-yellow-700 transition">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                                090.123.4567 (Hotline)
                            </a>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<script>
    // Initialize images array from server-side model
    const images = [
        @if (otherImages.Any())
        {
            foreach (var img in otherImages)
            {
                <text>'@img.ImageUrl',</text>
            }
        }
        else 
        {
            <text>'@mainImgUrl'</text>
        }
    ];

    let currentIndex = 0;
    let autoPlayInterval;
    const autoPlayDelay = 5000; // 5 seconds

    // Touch variables
    let touchStartX = 0;
    let touchEndX = 0;

    // Initialize Slider
    function initSlider() {
        if (images.length > 1) {
            startAutoPlay();
        }
    }

    // Go to specific slide
    function goToSlide(index) {
        // Wrap around logic
        if (index >= images.length) index = 0;
        if (index < 0) index = images.length - 1;

        currentIndex = index;

        // Update Main Image with Fade Effect
        const mainImg = document.getElementById('mainImage');
        mainImg.style.opacity = '0';
        
        setTimeout(() => {
            mainImg.src = images[currentIndex];
            mainImg.style.opacity = '1';
        }, 200); // Wait for fade out

        // Update Thumbnails
        updateThumbnails();
        
        // Reset Auto Play
        resetAutoPlay();
    }

    function nextSlide() {
        goToSlide(currentIndex + 1);
    }

    function prevSlide() {
        goToSlide(currentIndex - 1);
    }

    function updateThumbnails() {
        const container = document.getElementById('thumbnailContainer');
        if (!container) return;

        const thumbs = container.getElementsByClassName('thumbnail-item');
        for (let i = 0; i < thumbs.length; i++) {
            if (i === currentIndex) {
                thumbs[i].classList.remove('border-transparent', 'opacity-70');
                thumbs[i].classList.add('border-primary', 'opacity-100');
            } else {
                thumbs[i].classList.remove('border-primary', 'opacity-100');
                thumbs[i].classList.add('border-transparent', 'opacity-70');
            }
        }
    }

    // Auto Play Logic
    function startAutoPlay() {
        stopAutoPlay();
        autoPlayInterval = setInterval(nextSlide, autoPlayDelay);
    }

    function stopAutoPlay() {
        if (autoPlayInterval) clearInterval(autoPlayInterval);
    }

    function resetAutoPlay() {
        stopAutoPlay();
        startAutoPlay();
    }

    // Swipe Logic for Touch Devices
    function handleTouchStart(e) {
        touchStartX = e.changedTouches[0].screenX;
    }

    function handleTouchMove(e) {
        // Prevent default scrolling if horizontal swipe is detected? 
        // Optional: e.preventDefault() if confident
    }

    function handleTouchEnd(e) {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
    }

    function handleSwipe() {
        const threshold = 50; // Minimum distance for swipe
        if (touchEndX < touchStartX - threshold) {
            nextSlide(); // Swipe Left -> Next
        }
        if (touchEndX > touchStartX + threshold) {
            prevSlide(); // Swipe Right -> Prev
        }
    }

    // Start on load
    document.addEventListener('DOMContentLoaded', initSlider);

</script>
