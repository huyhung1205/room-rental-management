@using Project_65133295.Models
@model IEnumerable<Payments>

@{
    ViewBag.Title = "Manage Invoices";
    ViewBag.PageTitle = "Invoice List";
    ViewBag.PageDescription = "Track and manage monthly payments";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <a href="@Url.Action("ManageContracts")" class="inline-flex items-center px-4 py-2 bg-yellow-400 text-white font-bold rounded-lg hover:bg-yellow-500 transition shadow-sm">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Create New Invoice
        </a>
    </div>

    <!-- Filter Bar -->
    <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100">
        <form method="get" class="flex flex-col md:flex-row gap-4">
            <div class="flex-1 relative">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </span>
                <input type="text" name="query" value="@ViewBag.CurrentQuery" placeholder="Search invoice number, customer name..." 
                       class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
            </div>
            <div class="w-full md:w-48">
                <select name="status" onchange="this.form.submit()" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                    <option value="">All Statuses</option>
                    <option value="Pending" @(ViewBag.CurrentStatus == "Pending" ? "selected" : "")>Pending Payment</option>
                    <option value="Paid" @(ViewBag.CurrentStatus == "Paid" ? "selected" : "")>Paid</option>
                    <option value="Overdue" @(ViewBag.CurrentStatus == "Overdue" ? "selected" : "")>Overdue</option>
                </select>
            </div>
            <button type="submit" class="px-6 py-2 bg-gray-800 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors">
                Filter
            </button>
        </form>
    </div>

    <!-- Invoices Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 border-b border-gray-100">
                    <tr>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Invoice Number</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Tenant</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Created Date</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Due Date</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Total Amount</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Status</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center text-gray-500 italic">
                                No invoices found.
                            </td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition-colors group">
                            <td class="px-6 py-4">
                                <div class="text-sm font-bold text-gray-900">@item.InvoiceNumber</div>
                                <div class="text-xs text-indigo-600 font-medium">@item.Contracts.ContractNumber</div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm font-medium text-gray-900">@(item.Users1 != null ? item.Users1.FirstName + " " + item.Users1.LastName : "Khách")</div>
                                <div class="text-xs text-gray-500">Room: @(item.Contracts != null && item.Contracts.Bookings != null && item.Contracts.Bookings.Rooms != null ? item.Contracts.Bookings.Rooms.RoomNumber : "N/A")</div>
                            </td>
                            <td class="px-6 py-4 text-sm text-center text-gray-600">
                                @item.PaymentDate.ToString("dd/MM/yyyy")
                            </td>
                            <td class="px-6 py-4 text-sm text-center @(item.PaymentStatus == "Pending" && item.DueDate < DateTime.Now ? "text-red-600 font-bold" : "text-gray-600")">
                                @(item.DueDate?.ToString("dd/MM/yyyy") ?? "-")
                            </td>
                            <td class="px-6 py-4 text-sm font-bold text-center text-gray-900">
                                @item.Amount.ToString("N0")đ
                            </td>
                            <td class="px-6 py-4 text-center">
                                @switch (item.PaymentStatus)
                                {
                                    case "Pending":
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase rounded-full bg-yellow-100 text-yellow-700 border border-yellow-200">Pending</span>
                                        break;
                                    case "Paid":
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase rounded-full bg-green-100 text-green-700 border border-green-200">Paid</span>
                                        break;
                                    case "Overdue":
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase rounded-full bg-red-100 text-red-700 border border-red-200">Overdue</span>
                                        break;
                                    default:
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase rounded-full bg-gray-100 text-gray-700 border border-gray-200">@item.PaymentStatus</span>
                                        break;
                                }
                            </td>
                            <td class="px-6 py-4 text-right">
                                <a href="@Url.Action("InvoiceDetails", new { id = item.PaymentID })" class="inline-flex items-center justify-center p-2 text-gray-400 hover:text-yellow-600 hover:bg-yellow-50 rounded-lg transition-all" title="View Details">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
