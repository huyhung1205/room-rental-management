@using Project_65133295.Models
@model IEnumerable<Contracts>

@{
    ViewBag.Title = "Manage Contracts";
    ViewBag.PageTitle = "Contract List";
    ViewBag.PageDescription = "Manage active rental contracts";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="space-y-6">
    <!-- Stats & Filters -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100 flex items-center space-x-4">
            <div class="w-12 h-12 bg-indigo-50 text-indigo-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
            </div>
            <div>
                <p class="text-xs text-gray-500 uppercase font-semibold">Total Contracts</p>
                <p class="text-xl font-bold">@Model.Count()</p>
            </div>
        </div>
        <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100 flex items-center space-x-4">
            <div class="w-12 h-12 bg-green-50 text-green-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div>
                <p class="text-xs text-gray-500 uppercase font-semibold">Active</p>
                <p class="text-xl font-bold">@Model.Count(c => c.Status == "Active")</p>
            </div>
        </div>
    </div>

    <!-- Filter Bar -->
    <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100">
        <form method="get" class="flex flex-col md:flex-row gap-4">
            <div class="flex-1 relative">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </span>
                <input type="text" name="query" value="@ViewBag.CurrentQuery" placeholder="Search by contract number, customer name..." 
                       class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
            </div>
            <div class="w-full md:w-48">
                <select name="status" onchange="this.form.submit()" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                    <option value="">All Statuses</option>
                    <option value="Active" @(ViewBag.CurrentStatus == "Active" ? "selected" : "")>Active</option>
                    <option value="Expired" @(ViewBag.CurrentStatus == "Expired" ? "selected" : "")>Expired</option>
                    <option value="Terminated" @(ViewBag.CurrentStatus == "Terminated" ? "selected" : "")>Terminated</option>
                </select>
            </div>
            <button type="submit" class="px-6 py-2 bg-gray-800 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors">
                Filter
            </button>
            <a href="@Url.Action("ManageContracts")" class="px-6 py-2 bg-gray-100 text-gray-600 font-medium rounded-lg hover:bg-gray-200 transition-colors text-center">
                Refresh
            </a>
        </form>
    </div>

    <!-- Contracts Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 border-b border-gray-100">
                    <tr>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Contract Number</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Tenant</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Room</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Duration</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Rental Price</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Status</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center text-gray-500 italic">
                                No contracts found.
                            </td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        var tenant = item.Bookings?.Users1;
                        var room = item.Bookings?.Rooms;
                        
                        <tr class="hover:bg-gray-50 transition-colors group">
                            <td class="px-6 py-4">
                                <div class="text-sm font-bold text-gray-900">@item.ContractNumber</div>
                                <div class="text-xs text-gray-500">Ngày ký: @(item.CreatedAt.HasValue ? item.CreatedAt.Value.ToString("dd/MM/yyyy") : "-")</div>
                            </td>
                            <td class="px-6 py-4">
                                @if (tenant != null)
                                {
                                    <div class="text-sm font-medium text-gray-900">@tenant.FirstName @tenant.LastName</div>
                                    <div class="text-xs text-gray-500">@tenant.PhoneNumber</div>
                                }
                                else
                                {
                                    <span class="text-gray-400 italic text-sm">N/A</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-700">
                                @if (room != null)
                                {
                                    <span class="font-bold text-indigo-600">P.@room.RoomNumber</span>
                                }
                                else
                                {
                                    <span class="text-gray-400">N/A</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-sm text-center">
                                <div class="text-gray-900">@item.StartDate.ToString("dd/MM/yy") - @item.EndDate.ToString("dd/MM/yy")</div>
                            </td>
                            <td class="px-6 py-4 text-sm font-bold text-center text-gray-900">
                                @item.RentalPrice.ToString("N0")đ
                            </td>
                            <td class="px-6 py-4 text-center">
                                @switch (item.Status)
                                {
                                    case "Active":
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase rounded-full bg-green-100 text-green-700 border border-green-200">Active</span>
                                        break;
                                    case "Expired":
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase rounded-full bg-yellow-100 text-yellow-700 border border-yellow-200">Expired</span>
                                        break;
                                    case "Terminated":
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase rounded-full bg-red-100 text-red-700 border border-red-200">Terminated</span>
                                        break;
                                    default:
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase rounded-full bg-gray-100 text-gray-700 border border-gray-200">@item.Status</span>
                                        break;
                                }
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end space-x-2">
                                    @if (item.Status == "Active")
                                    {
                                        <a href="@Url.Action("CreateInvoice", new { contractId = item.ContractID })" 
                                           class="inline-flex items-center px-3 py-1.5 bg-yellow-50 text-yellow-600 text-xs font-bold rounded-lg hover:bg-yellow-100 transition-colors"
                                           title="Create monthly invoice">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                            </svg>
                                            Create Invoice
                                        </a>

                                        var isRequested = item.Bookings?.Notes?.ToString().Contains("Yêu cầu trả phòng") ?? false;
                                        <button onclick="confirmCheckout(@item.ContractID, '@(item.Bookings?.Rooms?.RoomNumber ?? "N/A")')" 
                                                class="inline-flex items-center px-3 py-1.5 bg-red-50 text-red-600 text-xs font-bold rounded-lg hover:bg-red-100 transition-colors"
                                                title="@(isRequested ? "Process checkout request" : "Force checkout")">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                            </svg>
                                            @(isRequested ? "Checkout" : "Force Checkout")
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<form id="checkoutForm" method="post" action="@Url.Action("CheckoutContract", "Admin_65133295")">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="checkoutContractId" />
</form>

<script>
    function confirmCheckout(id, roomNo) {
        console.log('Checkout requested for Contract ID:', id, 'Room:', roomNo);
        Swal.fire({
            title: 'Confirm Checkout?',
            text: 'You will complete the room return procedure for room ' + roomNo + '. The room will change to VACANT status.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#EF4444',
            cancelButtonColor: '#6B7280',
            confirmButtonText: 'Confirm Checkout',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                console.log('Submitting checkout form for ID:', id);
                document.getElementById('checkoutContractId').value = id;
                document.getElementById('checkoutForm').submit();
            }
        });
    }
</script>
