@model IEnumerable<Project_65133295.Models.Bookings>

@{
    ViewBag.Title = "Manage Bookings";
    ViewBag.PageTitle = "Manage Bookings";
    ViewBag.PageDescription = "Review and manage room rental requests from customers";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    
    // Safety check for first deployment before rebuild
    if (Model == null)
    {
        <div class="p-6">
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-yellow-700">
                            System is being updated. Please press <strong>Ctrl + Shift + B (Rebuild Solution)</strong> in Visual Studio to activate this new feature.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        return;
    }

    // Filter broken data (orphaned records) to ensure stats match the list
    var displayableBookings = Model.Where(b => b.Users1 != null && b.Rooms != null).ToList();
}

<div class="space-y-6">
    <!-- Filters & Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100 flex items-center space-x-4">
            <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
            </div>
            <div>
                <p class="text-xs text-gray-500 uppercase font-semibold">Total Requests</p>
                <p class="text-xl font-bold">@displayableBookings.Count()</p>
            </div>
        </div>
        <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100 flex items-center space-x-4">
            <div class="w-12 h-12 bg-yellow-50 text-yellow-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div>
                <p class="text-xs text-gray-500 uppercase font-semibold">Pending</p>
                <p class="text-xl font-bold">@displayableBookings.Count(b => b.BookingStatus == "Pending")</p>
            </div>
        </div>
        <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100 flex items-center space-x-4">
            <div class="w-12 h-12 bg-green-50 text-green-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
            <div>
                <p class="text-xs text-gray-500 uppercase font-semibold">Approved</p>
                <p class="text-xl font-bold">@displayableBookings.Count(b => b.BookingStatus == "Approved")</p>
            </div>
        </div>
        <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100 flex items-center space-x-4">
            <div class="w-12 h-12 bg-red-50 text-red-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </div>
            <div>
                <p class="text-xs text-gray-500 uppercase font-semibold">Rejected</p>
                <p class="text-xl font-bold">@displayableBookings.Count(b => b.BookingStatus == "Rejected")</p>
            </div>
        </div>
    </div>

    <!-- Search & Filter Bar -->
    <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100">
        <form method="get" class="flex flex-col md:flex-row gap-4">
            <div class="flex-1 relative">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </span>
                <input type="text" name="query" value="@ViewBag.CurrentQuery" placeholder="Search by customer name, room number..." 
                       class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
            </div>
            <div class="w-full md:w-48">
                <select name="status" onchange="this.form.submit()" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none appearance-none bg-no-repeat bg-[right_1rem_center] bg-[length:1em_1em]" style="background-image: url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%23666%22%20d%3D%22M287%2069.4a17.6%2017.6%200%200%200-13-5.4H18.4c-5%200-9.3%201.8-12.9%205.4A17.6%2017.6%200%200%200%200%2082.2c0%205%201.8%209.3%205.4%2012.9l128%20127.9c3.6%203.6%207.8%205.4%2012.8%205.4s9.2-1.8%2012.8-5.4L287%2095c3.5-3.5%205.4-7.8%205.4-12.8%200-5-1.9-9.2-5.5-12.8z%22/%3E%3C/svg%3E');">
                    <option value="">All statuses</option>
                    <option value="Pending" @(ViewBag.CurrentStatus == "Pending" ? "selected" : "")>Pending</option>
                    <option value="Approved" @(ViewBag.CurrentStatus == "Approved" ? "selected" : "")>Approved</option>
                    <option value="Rejected" @(ViewBag.CurrentStatus == "Rejected" ? "selected" : "")>Rejected</option>
                    <option value="Cancelled" @(ViewBag.CurrentStatus == "Cancelled" ? "selected" : "")>System Cancelled</option>
                </select>
            </div>
            <button type="submit" class="px-6 py-2 bg-gray-800 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors">
                Filter
            </button>
            <a href="@Url.Action("ManageBookings")" class="px-6 py-2 bg-gray-100 text-gray-600 font-medium rounded-lg hover:bg-gray-200 transition-colors text-center">
                Refresh
            </a>
        </form>
    </div>

    <!-- Booking Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 border-b border-gray-100">
                    <tr>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Tenant</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Room</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Check-in Date</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Duration</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Deposit</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-center">Status</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @if (!displayableBookings.Any())
                    {
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center text-gray-500 italic">
                                No matching booking requests found.
                            </td>
                        </tr>
                    }
                    @foreach (var item in displayableBookings)
                    {
                        <tr class="hover:bg-gray-50 transition-colors group">
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold mr-3">
                                        @((item.Users1.FirstName ?? "U").Substring(0, 1))
                                    </div>
                                    <div>
                                        <div class="text-sm font-bold text-gray-900">@item.Users1.FirstName @item.Users1.LastName</div>
                                        <div class="text-xs text-gray-500">@item.Users1.PhoneNumber</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-700">
                                <span class="font-bold text-blue-600">P.@item.Rooms.RoomNumber</span><br />
                                <span class="text-xs text-gray-500">@item.Rooms.Title</span>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-700 text-center">
                                @item.CheckInDate.ToString("dd/MM/yyyy")
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-700 text-center font-medium">
                                @item.Duration months
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-900 text-center font-bold">
                                @(item.DepositAmount?.ToString("N0") ?? "0") đ
                            </td>
                            <td class="px-6 py-4 text-center">
                                @switch (item.BookingStatus)
                                {
                                    case "Pending":
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase tracking-wider rounded-full bg-yellow-100 text-yellow-700 border border-yellow-200">Pending</span>
                                        break;
                                    case "Approved":
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase tracking-wider rounded-full bg-green-100 text-green-700 border border-green-200">Approved</span>
                                        break;
                                    case "Rejected":
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase tracking-wider rounded-full bg-red-100 text-red-700 border border-red-200">Từ Chối</span>
                                        break;
                                    case "Cancelled":
                                        <span class="px-2.5 py-1 text-[10px] font-bold uppercase tracking-wider rounded-full bg-gray-100 text-gray-700 border border-gray-200">Cancelled</span>
                                        break;
                                }
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end space-x-2">
                                    <button onclick="showDetailsModal('@item.BookingID', '@item.Users1.FirstName @item.Users1.LastName', '@item.Rooms.RoomNumber', '@item.CheckInDate.ToString("dd/MM/yyyy")', '@item.Duration', '@(item.DepositAmount?.ToString("N0"))', '@HttpUtility.JavaScriptStringEncode(item.Notes)')" 
                                            class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all" title="View Details">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </button>
                                    
                                    @if (item.BookingStatus == "Pending")
                                    {
                                        <button onclick="openApproveModal(@item.BookingID, '@item.Users1.LastName')" 
                                                class="p-2 text-gray-400 hover:text-green-600 hover:bg-green-50 rounded-lg transition-all" title="Approve">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                        </button>
                                        <button onclick="openRejectModal(@item.BookingID, '@item.Users1.LastName')" 
                                                class="p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all" title="Reject">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div id="detailsModal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" onclick="closeDetailsModal()"></div>
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
        <div class="inline-block align-bottom bg-white rounded-xl text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full border border-gray-100">
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-100 flex justify-between items-center">
                <h3 class="text-lg font-bold text-gray-800">Booking Request Details</h3>
                <button onclick="closeDetailsModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="px-6 py-6 space-y-4">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <p class="text-[10px] text-gray-500 uppercase font-bold tracking-wider mb-1">Customer</p>
                        <p id="det-name" class="text-sm font-bold text-gray-800"></p>
                    </div>
                    <div>
                        <p class="text-[10px] text-gray-500 uppercase font-bold tracking-wider mb-1">Phòng số</p>
                        <p id="det-room" class="text-sm font-bold text-blue-600"></p>
                    </div>
                    <div>
                        <p class="text-[10px] text-gray-500 uppercase font-bold tracking-wider mb-1">Check-in Date</p>
                        <p id="det-date" class="text-sm font-medium text-gray-700"></p>
                    </div>
                    <div>
                        <p class="text-[10px] text-gray-500 uppercase font-bold tracking-wider mb-1">Rental Term</p>
                        <p id="det-duration" class="text-sm font-medium text-gray-700"></p>
                    </div>
                    <div>
                        <p class="text-[10px] text-gray-500 uppercase font-bold tracking-wider mb-1">Tiền cọc dự kiến</p>
                        <p id="det-deposit" class="text-sm font-bold text-gray-900"></p>
                    </div>
                </div>
                <div>
                    <p class="text-[10px] text-gray-500 uppercase font-bold tracking-wider mb-1">Ghi chú từ khách</p>
                    <div id="det-notes" class="text-sm text-gray-600 bg-gray-50 p-3 rounded-lg border border-gray-100 min-h-[60px] whitespace-pre-line"></div>
                </div>
            </div>
            <div class="bg-gray-50 px-6 py-4 flex justify-end">
                <button onclick="closeDetailsModal()" class="px-5 py-2 bg-white border border-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-100 transition-colors">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div id="approveModal" class="fixed inset-0 z-50 hidden overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen px-4">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75" onclick="closeApproveModal()"></div>
        <div class="relative bg-white rounded-xl shadow-xl max-w-sm w-full p-6 text-center">
            <div class="w-16 h-16 bg-green-50 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Confirm Approval?</h3>
            <p class="text-sm text-gray-500 mb-6">You are approving <span id="approveName" class="font-bold text-gray-800"></span> to rent the room. The system will automatically create a contract and change the room status.</p>
            
            @using (Html.BeginForm("ApproveBooking", "Admin_65133295", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="approveId" />
                <div class="flex gap-3">
                    <button type="button" onclick="closeApproveModal()" class="flex-1 px-4 py-2 border border-gray-200 text-gray-600 font-medium rounded-lg hover:bg-gray-100 transition-colors">Cancel</button>
                    <button type="submit" class="flex-1 px-4 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors">Confirm Approval</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div id="rejectModal" class="fixed inset-0 z-50 hidden overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen px-4">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75" onclick="closeRejectModal()"></div>
        <div class="relative bg-white rounded-xl shadow-xl max-w-sm w-full p-6 text-center">
            <div class="w-16 h-16 bg-red-50 text-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Từ chối yêu cầu?</h3>
            <p class="text-sm text-gray-500 mb-4">Vui lòng nhập lý do từ chối cho <span id="rejectName" class="font-bold text-gray-800"></span>.</p>
            
            @using (Html.BeginForm("RejectBooking", "Admin_65133295", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="rejectId" />
                <textarea name="reason" required class="w-full px-3 py-2 border border-gray-200 rounded-lg text-sm mb-6 h-24 focus:ring-2 focus:ring-red-500 outline-none" placeholder="Nhập lý do (ví dụ: Phòng đã có người đặt cọc trực tiếp...)"></textarea>
                <div class="flex gap-3">
                    <button type="button" onclick="closeRejectModal()" class="flex-1 px-4 py-2 border border-gray-200 text-gray-600 font-medium rounded-lg hover:bg-gray-100 transition-colors">Hủy</button>
                    <button type="submit" class="flex-1 px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-colors">Xác nhận từ chối</button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Details Modal
    function showDetailsModal(id, name, room, date, duration, deposit, notes) {
        document.getElementById('det-name').innerText = name;
        document.getElementById('det-room').innerText = 'Phòng ' + room;
        document.getElementById('det-date').innerText = date;
        document.getElementById('det-duration').innerText = duration + ' tháng';
        document.getElementById('det-deposit').innerText = (deposit || '0') + ' đ';
        document.getElementById('det-notes').innerText = notes || 'Không có ghi chú.';
        document.getElementById('detailsModal').classList.remove('hidden');
    }

    function closeDetailsModal() {
        document.getElementById('detailsModal').classList.add('hidden');
    }

    // Approve Modal
    function openApproveModal(id, name) {
        document.getElementById('approveId').value = id;
        document.getElementById('approveName').innerText = name;
        document.getElementById('approveModal').classList.remove('hidden');
    }

    function closeApproveModal() {
        document.getElementById('approveModal').classList.add('hidden');
    }

    // Reject Modal
    function openRejectModal(id, name) {
        document.getElementById('rejectId').value = id;
        document.getElementById('rejectName').innerText = name;
        document.getElementById('rejectModal').classList.remove('hidden');
    }

    function closeRejectModal() {
        document.getElementById('rejectModal').classList.add('hidden');
    }
</script>
