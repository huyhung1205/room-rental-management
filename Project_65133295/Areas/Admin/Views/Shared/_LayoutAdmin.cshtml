<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Dashboard</title>
    
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#facc15',
                        'primary-dark': '#eab308'
                    }
                }
            }
        }
    </script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        .sidebar-item.active {
            background-color: #fef9c3;
            color: #eab308;
        }

        /* Hiding scrollbar but keeping scroll functionality */
        .no-scrollbar::-webkit-scrollbar {
            display: none;
        }
        .no-scrollbar {
            -ms-overflow-style: none;  /* IE and Edge */
            scrollbar-width: none;  /* Firefox */
        }
    </style>
</head>
<body class="font-sans bg-gray-50">
    
    <div class="flex h-screen overflow-hidden">
        
        <!-- Sidebar (Fixed Left) - Admin Version -->
        <aside id="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 bg-white border-r border-gray-200 transform transition-transform duration-300 lg:translate-x-0 -translate-x-full">
            <div class="flex flex-col h-full">
                
                <!-- Logo Section with Admin Badge -->
                <div class="px-6 py-5 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <div class="flex items-center space-x-2">
                                <img src="/public/logo.jpg" alt="Thanh Thao" class="h-8 w-auto rounded-full border border-yellow-200">
                                <h1 class="text-xl font-bold text-primary">Thanh Thảo</h1>
                            </div>
                            <p class="text-xs text-gray-500 mt-1">Management Center</p>
                        </div>
                        <button id="sidebar-close" class="lg:hidden text-gray-500 hover:text-gray-700">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>
                
                <!-- Admin Menu Items -->
                <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto no-scrollbar">
                    <a href="@Url.Action("Index", "Admin_65133295", new { area = "Admin" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        Dashboard
                    </a>
                    
                    <a href="@Url.Action("ManageRooms", "Admin_65133295", new { area = "Admin" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        Manage Rooms
                    </a>
                    
                    <a href="@Url.Action("ManageBookings", "Admin_65133295", new { area = "Admin" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Bookings
                    </a>
                    
                    <a href="@Url.Action("ManageContracts", "Admin_65133295", new { area = "Admin" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Contracts
                    </a>
                    
                    <a href="@Url.Action("CreateMonthlyInvoices", "Admin_65133295", new { area = "Admin" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        Invoices
                    </a>
                    
                    <a href="@Url.Action("ManageUsers", "Admin_65133295", new { area = "Admin" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                        Users
                    </a>
                    
                    <a href="@Url.Action("ApproveReviews", "Admin_65133295", new { area = "Admin" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                        </svg>
                        Approve Reviews
                    </a>
                    
                    <div class="border-t border-gray-200 my-2"></div>
                    
                    <a href="@Url.Action("ViewActivityLogs", "Admin_65133295", new { area = "Admin" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Activity Logs
                    </a>
                </nav>
                
                <!-- Logout Button (Bottom) -->
                <div class="px-4 py-4 border-t border-gray-200">
                    <a href="@Url.Action("Logout", "Guest_65133295", new { area = "" })" class="flex items-center px-4 py-3 text-sm font-medium text-red-600 rounded-lg hover:bg-red-50 transition">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                        Logout
                    </a>
                </div>
            </div>
        </aside>
        
        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col lg:ml-64 overflow-hidden">
            
            <!-- Top Bar -->
            <header class="bg-white border-b border-gray-200 px-6 py-4">
                <div class="flex items-center justify-between">
                    <!-- Hamburger Menu (Mobile) + Page Title -->
                    <div class="flex items-center space-x-4">
                        <button id="sidebar-toggle" class="lg:hidden text-gray-500 hover:text-gray-700">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </button>
                        
                        <div>
                            <h2 class="text-lg font-semibold text-gray-800">@ViewBag.PageTitle</h2>
                            <p class="text-xs text-gray-500">@ViewBag.PageDescription</p>
                        </div>
                    </div>
                    
                    <!-- Right Section: Notifications + User Profile -->
                    <div class="flex items-center space-x-5">
                        <!-- Notification Bell -->
                        <a href="@Url.Action("Notifications", "Admin_65133295", new { area = "Admin" })" class="relative text-gray-500 hover:text-yellow-600 transition-colors">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                            </svg>
                            @Html.Action("RenderAdminNotificationBadge", "Admin_65133295")
                        </a>

                        <!-- Static Profile Display -->
                        <div class="flex items-center space-x-3 border-l pl-5 border-gray-200">
                            <div class="flex flex-col items-end hidden md:flex">
                                <span class="text-sm font-bold text-gray-800 leading-tight">Admin System</span>
                            </div>
                            <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-primary-dark font-bold shadow-sm border-2 border-white">
                                AD
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-6 bg-gray-50">
                @RenderBody()
            </main>
        </div>
    </div>
    
    <!-- Scripts -->
    <script>
        // Sidebar Toggle (Mobile)
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarClose = document.getElementById('sidebar-close');
        
        sidebarToggle.addEventListener('click', function() {
            sidebar.classList.toggle('-translate-x-full');
        });
        
        sidebarClose.addEventListener('click', function() {
            sidebar.classList.add('-translate-x-full');
        });
        
        
        // Active menu item highlight
        const currentUrl = window.location.href.split('?')[0].toLowerCase();
        console.log('Current URL:', currentUrl);
        document.querySelectorAll('.sidebar-item').forEach(item => {
            const itemUrl = item.href.split('?')[0].toLowerCase();
            console.log('Menu item URL:', itemUrl, 'Match:', itemUrl === currentUrl);
            // Compare absolute URLs ignoring query params and casing
            if (itemUrl === currentUrl) {
                item.classList.add('active');
            }
        });
    </script>
    
    <!-- jQuery (required for AJAX and DOM manipulation) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        $(document).ready(function() {
            @if (TempData["SuccessMessage"] != null || TempData["Message"] != null)
            {
                var msg = TempData["SuccessMessage"] ?? TempData["Message"];
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: '@Html.Raw(msg)',
                    timer: 3000,
                    showConfirmButton: false
                });
                </text>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: '@Html.Raw(TempData["ErrorMessage"])'
                });
                </text>
            }
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
