<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - User Dashboard</title>
    
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#facc15',
                        'primary-dark': '#eab308'
                    }
                }
            }
        }
    </script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        .sidebar-item.active {
            background-color: #fef9c3;
            color: #eab308;
        }
    </style>
</head>
<body class="font-sans bg-gray-50">
    
    <div class="flex h-screen overflow-hidden">
        
        <!-- Sidebar (Fixed Left) -->
        <aside id="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 bg-white border-r border-gray-200 transform transition-transform duration-300 lg:translate-x-0 -translate-x-full">
            <div class="flex flex-col h-full">
                
                <!-- Logo Section -->
                <div class="px-6 py-5 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <div class="flex items-center space-x-2">
                                <img src="/public/logo.jpg" alt="Thanh Thao" class="h-8 w-auto rounded-full border border-yellow-200">
                                <h1 class="text-xl font-bold text-primary">Thanh Thảo</h1>
                            </div>
                            <p class="text-xs text-gray-500">User Dashboard</p>
                        </div>
                        <button id="sidebar-close" class="lg:hidden text-gray-500 hover:text-gray-700">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>
                
                <!-- Menu Items -->
                <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto">
                    <a href="@Url.Action("Index", "User_65133295", new { area = "User" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        Dashboard
                    </a>
                    
                    <a href="@Url.Action("SearchAndBook", "User_65133295", new { area = "User" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                        Room
                    </a>
                    
                    <a href="@Url.Action("MyBookings", "User_65133295", new { area = "User" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        My Bookings
                        @if (ViewBag.PendingCount != null && ViewBag.PendingCount > 0)
                        {
                            <span class="ml-auto px-2 py-1 text-xs font-semibold text-white bg-red-500 rounded-full">@ViewBag.PendingCount</span>
                        }
                    </a>
                    
                    <a href="@Url.Action("MyInvoices", "User_65133295", new { area = "User" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Invoices
                    </a>
                    
                    <a href="@Url.Action("Profile", "User_65133295", new { area = "User" })" class="sidebar-item flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-yellow-50 hover:text-primary transition">
                        <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Profile
                    </a>
                </nav>
                
                <!-- Logout Button (Bottom) -->
                <div class="px-4 py-4 border-t border-gray-200">
                    <a href="@Url.Action("Logout", "Guest_65133295", new { area = "" })" class="flex items-center px-4 py-3 text-sm font-medium text-red-600 rounded-lg hover:bg-red-50 transition">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                        Logout
                    </a>
                </div>
            </div>
        </aside>
        
        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col lg:ml-64 overflow-hidden">
            
            <!-- Top Bar -->
            <header class="bg-white border-b border-gray-200 px-6 py-4">
                <div class="flex items-center justify-between">
                    <!-- Hamburger Menu (Mobile) + Breadcrumbs -->
                    <div class="flex items-center space-x-4">
                        <button id="sidebar-toggle" class="lg:hidden text-gray-500 hover:text-gray-700">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </button>
                        
                        <!-- Page Title & Description -->
                        <div>
                            <h2 class="text-lg font-semibold text-gray-800">@ViewBag.PageTitle</h2>
                            <p class="text-xs text-gray-500">@ViewBag.PageDescription</p>
                        </div>
                    </div>
                    
                    <!-- Right Section: Notifications + Avatar -->
                    <div class="flex items-center space-x-4">
                        <!-- Notification Bell -->
                        <a href="@Url.Action("Notifications", "User_65133295")" class="relative text-gray-500 hover:text-yellow-600 transition-colors">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                            </svg>
                            @Html.Action("RenderNotificationBadge", "User_65133295")
                        </a>
                        
                        <!-- User Greeting & Avatar -->
                        <div class="flex items-center space-x-3">
                            <span class="text-sm font-medium text-gray-700 hidden md:block">
                                Hello, @(Session["FullName"] ?? User.Identity.Name)
                            </span>
                            
                            @{
                                var userAvatar = Session["Avatar"] as string;
                                if (!string.IsNullOrEmpty(userAvatar))
                                {
                                    <img src="@Url.Content(userAvatar)" alt="Avatar" class="w-8 h-8 rounded-full object-cover shadow-sm border border-gray-200">
                                }
                                else
                                {
                                    <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center text-white font-semibold shadow-sm text-xs">
                                        @{
                                            var displayName = Session["FullName"] as string ?? User.Identity.Name;
                                            var initial = !string.IsNullOrEmpty(displayName) ? displayName.Substring(0, 1).ToUpper() : "U";
                                            @initial
                                        }
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-6">
                @RenderBody()
            </main>
        </div>
    </div>
    
    <!-- jQuery (required for AJAX and star rating) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Scripts -->
    <script>
        // Sidebar Toggle (Mobile)
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarClose = document.getElementById('sidebar-close');
        
        sidebarToggle.addEventListener('click', function() {
            sidebar.classList.toggle('-translate-x-full');
        });
        
        sidebarClose.addEventListener('click', function() {
            sidebar.classList.add('-translate-x-full');
        });
        
        // Active menu item highlight
        const currentUrl = window.location.href.split('?')[0].toLowerCase();
        document.querySelectorAll('.sidebar-item').forEach(item => {
            const itemUrl = item.href.split('?')[0].toLowerCase();
            if (itemUrl === currentUrl) {
                item.classList.add('active');
            }
        });
    </script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
