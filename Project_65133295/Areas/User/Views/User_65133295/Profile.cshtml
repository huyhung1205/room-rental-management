@model Project_65133295.Models.Users

@{
    ViewBag.Title = "Personal Profile";
    ViewBag.PageTitle = "Personal Profile";
    ViewBag.PageDescription = "Your account details and settings";
    Layout = "~/Areas/User/Views/Shared/_LayoutUser.cshtml";
}

<div class="mx-auto space-y-6">
    <!-- Profile Header Card -->
    <div class="bg-white rounded-xl shadow-md border border-yellow-100 overflow-hidden">
        <div class="h-32 bg-gradient-to-r from-yellow-400 to-yellow-500"></div>
        <div class="px-8 pb-8">
            <div class="relative flex justify-between items-end -mt-12 mb-6">
                <div class="relative group">
                    <img id="profile-avatar" src="@(string.IsNullOrEmpty(Model.Avatar) ? Url.Content("~/Content/img/default-avatar.png") : Url.Content(Model.Avatar))" 
                         alt="Avatar" 
                         class="w-32 h-32 rounded-xl border-4 border-white shadow-md object-cover">
                    <div class="absolute inset-0 flex items-center justify-center bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity rounded-xl cursor-pointer" onclick="document.getElementById('AvatarFile').click()">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                </div>
                <div class="flex space-x-3">
                    <button id="btn-edit" onclick="toggleEditMode(true)" class="px-4 py-2 bg-yellow-400 text-white font-medium rounded-lg hover:bg-yellow-500 hover:scale-105 transition-all flex items-center shadow-sm">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                    </button>
                    <button id="btn-cancel" onclick="toggleEditMode(false)" class="hidden px-4 py-2 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-all">
                        Cancel
                    </button>
                </div>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-yellow-600">@Model.FirstName @Model.LastName</h1>
                <p class="text-gray-500 font-light text-sm">@@@Model.Username • Member since @(Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("MM/yyyy") : "-")</p>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("UpdateProfile", "User_65133295", FormMethod.Post, new { enctype = "multipart/form-data", id = "profile-form" }))
    {
        @Html.AntiForgeryToken()
        <input type="file" name="AvatarFile" id="AvatarFile" class="hidden" accept="image/*" onchange="previewAvatar(this)">
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Left Info column -->
            <div class="md:col-span-2 space-y-6">
                <!-- Basic Info Card -->
                <div class="bg-white rounded-lg shadow-md border border-yellow-100 p-8">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-6 flex items-center">
                        <span class="w-8 h-8 rounded-lg bg-yellow-50 text-yellow-500 flex items-center justify-center mr-3">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </span>
                        Basic Information
                    </h2>
                    
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-gray-700">First Name</label>
                            <input type="text" name="FirstName" value="@Model.FirstName" readonly
                                   class="form-input-profile text-sm w-full rounded-lg border-transparent bg-gray-50 focus:outline-none transition-all">
                        </div>
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-gray-700">Last Name</label>
                            <input type="text" name="LastName" value="@Model.LastName" readonly
                                   class="form-input-profile text-sm w-full rounded-lg border-transparent bg-gray-50 focus:outline-none transition-all">
                        </div>
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-gray-700">Email</label>
                            <input type="email" value="@Model.Email" disabled
                                   class="text-sm w-full rounded-lg border-transparent bg-gray-100 text-gray-400 cursor-not-allowed focus:outline-none">
                            <p class="text-[10px] text-gray-500 font-light italic">* Email cannot be changed</p>
                        </div>
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-gray-700">Phone Number</label>
                            <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" readonly
                                   class="form-input-profile text-sm w-full rounded-lg border-transparent bg-gray-50 focus:outline-none transition-all">
                        </div>
                    </div>
                </div>

                <!-- Address Card -->
                <div class="bg-white rounded-lg shadow-md border border-yellow-100 p-8">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-6 flex items-center">
                        <span class="w-8 h-8 rounded-lg bg-yellow-50 text-yellow-500 flex items-center justify-center mr-3">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </span>
                        Permanent Address
                    </h2>
                    
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <div class="sm:col-span-2 space-y-2">
                            <label class="text-sm font-medium text-gray-700">Street Address</label>
                            <input type="text" name="Street" value="@(Model.Addresses?.Street)" readonly
                                   class="form-input-profile text-sm w-full rounded-lg border-transparent bg-gray-50 focus:outline-none transition-all">
                        </div>
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-gray-700">Ward / Commune</label>
                            <input type="text" name="Ward" value="@(Model.Addresses?.Ward)" readonly
                                   class="form-input-profile text-sm w-full rounded-lg border-transparent bg-gray-50 focus:outline-none transition-all">
                        </div>
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-gray-700">District / County</label>
                            <input type="text" name="District" value="@(Model.Addresses?.District)" readonly
                                   class="form-input-profile text-sm w-full rounded-lg border-transparent bg-gray-50 focus:outline-none transition-all">
                        </div>
                        <div class="space-y-2">
                            <label class="text-sm font-medium text-gray-700">City / Province</label>
                            <input type="text" name="City" value="@(Model.Addresses?.City)" readonly
                                   class="form-input-profile text-sm w-full rounded-lg border-transparent bg-gray-50 focus:outline-none transition-all">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Sidebar -->
            <div class="space-y-6">
                <!-- Status Card -->
                <div class="bg-white rounded-lg shadow-md border border-yellow-100 p-6">
                    <h3 class="text-xs font-light text-gray-500 uppercase tracking-wider mb-4">Account Status</h3>
                    <div class="flex items-center p-3 bg-yellow-50 rounded-lg border border-yellow-100">
                        <div class="w-3 h-3 bg-yellow-400 rounded-full animate-pulse mr-3"></div>
                        <span class="text-yellow-700 font-medium text-sm">Active</span>
                    </div>
                    <div class="mt-4 pt-4 border-t border-yellow-50 space-y-3">
                        <div class="flex justify-between text-xs font-light">
                            <span class="text-gray-500">Email Verification:</span>
                            <span class="font-medium text-yellow-600">Completed</span>
                        </div>
                        <div class="flex justify-between text-xs font-light">
                            <span class="text-gray-500">Last Login:</span>
                            <span class="font-medium text-gray-700">@(Model.LastLoginAt.HasValue ? Model.LastLoginAt.Value.ToString("HH:mm dd/MM/yyyy") : "-")</span>
                        </div>
                    </div>
                </div>

                <!-- Submit Button Area (Hidden initially) -->
                <div id="save-area" class="hidden">
                    <button type="submit" class="w-full py-3 bg-yellow-400 text-white font-medium rounded-lg hover:bg-yellow-500 transition-all transform hover:scale-105 shadow-md shadow-yellow-200 flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        SAVE CHANGES
                    </button>
                    <p class="text-xs text-gray-400 text-center mt-3 font-light italic">
                        * Press save to update your latest information
                    </p>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function toggleEditMode(isEditing) {
        const inputs = document.querySelectorAll('.form-input-profile');
        const btnEdit = document.getElementById('btn-edit');
        const btnCancel = document.getElementById('btn-cancel');
        const saveArea = document.getElementById('save-area');

        if (isEditing) {
            inputs.forEach(input => {
                input.readOnly = false;
                input.classList.remove('bg-gray-50', 'border-transparent');
                input.classList.add('bg-white', 'ring-2', 'ring-yellow-200', 'border-yellow-500', 'focus:border-yellow-500', 'focus:ring-yellow-200');
            });
            btnEdit.classList.add('hidden');
            btnCancel.classList.remove('hidden');
            saveArea.classList.remove('hidden');
        } else {
            inputs.forEach(input => {
                input.readOnly = true;
                input.classList.add('bg-gray-50', 'border-transparent');
                input.classList.remove('bg-white', 'ring-2', 'ring-yellow-200', 'border-yellow-500', 'focus:border-yellow-500', 'focus:ring-yellow-200');
            });
            btnEdit.classList.remove('hidden');
            btnCancel.classList.add('hidden');
            saveArea.classList.add('hidden');
            // Reset form if cancelled (optional, requires simple reload or saving old values)
            if (!confirm('Are you sure you want to cancel? Unsaved information will be lost.')) return;
            window.location.reload();
        }
    }

    function previewAvatar(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('profile-avatar').src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
            
            // Auto enter edit mode if avatar changed
            toggleEditMode(true);
        }
    }
</script>
