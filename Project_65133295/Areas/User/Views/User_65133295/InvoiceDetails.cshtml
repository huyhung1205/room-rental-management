@model Project_65133295.Models.Payments

@{
    ViewBag.Title = "Invoice Details #" + Model.InvoiceNumber;
    ViewBag.PageTitle = "Invoice Details";
    ViewBag.PageDescription = "Detailed information of charges for " + Model.PaymentDate.ToString("MM/yyyy");
    Layout = "~/Areas/User/Views/Shared/_LayoutUser.cshtml";
}

<div class="">
    <!-- Back Button -->
    <div class="mb-6">
        <a href="@Url.Action("MyInvoices")" class="inline-flex items-center text-sm text-gray-500 hover:text-primary transition-colors">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Invoice List
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
        <!-- Invoice Header -->
        <div class="p-8 border-b border-gray-100 bg-gray-50/50 flex justify-between items-start">
            <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-1">INVOICE #@Model.InvoiceNumber</h2>
                <p class="text-gray-500">Created: @(Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("dd/MM/yyyy") : "-")</p>
            </div>
            <div class="text-right">
                @{
                    string statusClass = "bg-gray-100 text-gray-600";
                    string statusLabel = Model.PaymentStatus;

                    if (statusLabel == "Paid")
                    {
                        statusClass = "bg-green-100 text-green-700 border border-green-200";
                        statusLabel = "Paid";
                    }
                    else if (statusLabel == "Pending")
                    {
                        statusClass = "bg-yellow-100 text-yellow-700 border border-yellow-200";
                        statusLabel = "Pending Payment";
                    }
                }
                <span class="px-4 py-1.5 rounded-full text-xs font-bold @statusClass">
                    @statusLabel
                </span>
            </div>
        </div>

        <div class="p-8">
            <!-- General Information -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
                <div>
                    <h3 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-4">Room Information</h3>
                    <div class="bg-yellow-50/50 rounded-xl p-4 border border-yellow-100">
                        @if (Model.Contracts?.Bookings?.Rooms != null)
                        {
                            <p class="font-bold text-yellow-700 text-lg">Room @Model.Contracts.Bookings.Rooms.RoomNumber</p>
                            <p class="text-yellow-600 text-sm">@Model.Contracts.Bookings.Rooms.Title</p>
                        }
                        else
                        {
                            <p class="text-gray-400 italic">Room information not available</p>
                        }
                    </div>
                </div>
                <div>
                    <h3 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-4">Payment Information</h3>
                    <div class="space-y-2">
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-500">Payment Period:</span>
                            <span class="font-medium text-gray-900">Month @Model.PaymentDate.ToString("MM/yyyy")</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-500">Due Date:</span>
                            <span class="font-medium @(Model.DueDate.HasValue && Model.DueDate.Value < DateTime.Now && Model.PaymentStatus != "Paid" ? "text-red-600" : "text-gray-900")">
                                @(Model.DueDate.HasValue ? Model.DueDate.Value.ToString("dd/MM/yyyy") : "-")
                            </span>
                        </div>
                        @if (Model.PaidDate.HasValue)
                        {
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-500">Paid Date:</span>
                                <span class="font-medium text-green-600">@Model.PaidDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Fee Details -->
            <h3 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-4">Fee Details</h3>
            <div class="border border-gray-100 rounded-xl overflow-hidden mb-8">
                <table class="w-full text-left">
                    <thead class="bg-gray-50 text-gray-600 text-[11px] uppercase font-bold tracking-wider">
                        <tr>
                            <th class="px-6 py-4">Charge Description</th>
                            <th class="px-6 py-4 text-right">Amount</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        @if (Model.Fees != null && Model.Fees.Any())
                        {
                            foreach (var fee in Model.Fees)
                            {
                                <tr>
                                    <td class="px-6 py-4">
                                        <div class="font-medium text-gray-900">@fee.FeeName</div>
                                        @if (!string.IsNullOrEmpty(fee.Description))
                                        {
                                            <div class="text-xs text-gray-500">@fee.Description</div>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-right font-medium text-gray-900">
                                        @fee.FeeAmount.ToString("#,##0") đ
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="px-6 py-4 text-gray-500 italic">Room rent for month @Model.PaymentDate.ToString("MM/yyyy")</td>
                                <td class="px-6 py-4 text-right font-medium text-gray-900">@Model.Amount.ToString("#,##0") đ</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-yellow-50/30">
                        <tr>
                            <td class="px-6 py-4 font-bold text-gray-900">TOTAL</td>
                            <td class="px-6 py-4 text-right font-bold text-yellow-600 text-xl">@Model.Amount.ToString("#,##0") đ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end space-x-4">
                @if (Model.PaymentStatus == "Pending")
                {
                    using (Html.BeginForm("PayInvoice", "User_65133295", new { id = Model.PaymentID }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="px-8 py-3 bg-primary text-white font-bold rounded-xl hover:bg-primary-dark transition-all transform hover:scale-105 shadow-lg shadow-primary/20 flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                            PAY NOW
                        </button>
                    }
                }
                else
                {
                    <button onclick="window.print()" class="px-6 py-3 border border-gray-200 text-gray-600 font-bold rounded-xl hover:bg-gray-50 transition-all flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2-2v4a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9v4a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                        </svg>
                        PRINT INVOICE
                    </button>
                }
            </div>
        </div>
        
        <!-- Footer Note -->
        <div class="bg-gray-50 p-6 border-t border-gray-100">
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-xs text-gray-500 italic">
                        If you have any questions about the fees above, please contact the Management Board through the Notifications section or contact us directly at the office.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
